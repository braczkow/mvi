<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorSecondary">@color/color_second</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="actionMenuTextColor">?attr/colorSecondary</item>
        <item name="android:actionMenuTextColor">?attr/colorSecondary</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>